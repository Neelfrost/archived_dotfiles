# --------------------------------- Contexts --------------------------------- #

global !p
def math():
    return vim.eval('vimtex#syntax#in_mathzone()') == '1'

def comment():
	return vim.eval('vimtex#syntax#in_comment()') == '1'

def env(name):
	[x,y] = vim.eval("vimtex#env#is_inside('" + name + "')")
	return x != '0' and x != '0'
endglobal

# -------------------------------- Math fonts -------------------------------- #

snippet mcal "Caligraphy" i
\mathcal{${1:${VISUAL}}}
endsnippet

snippet mrm "Roman" i
\mathrm{${1:${VISUAL}}}
endsnippet

snippet mit "Italics" i
\mathit{${1:${VISUAL}}}
endsnippet

snippet mfr "Fraktur" i
\mathfrak{${1:${VISUAL}}}
endsnippet

snippet mbb "Blackboard bold" i
\mathbb{${1:${VISUAL}}}
endsnippet

priority 10
snippet msc "Script" i
\mathscr{${1:${VISUAL}}}
endsnippet

priority 10
snippet mbf "Bold" i
\mathbf{${1:${VISUAL}}}
endsnippet

# ----------------------------- Math environments ---------------------------- #

snippet ilc "Chemmacros environment" wA
\ch{${1:${VISUAL}}}$0
endsnippet

snippet ilm "Inline math environment" wA
$ ${1:${VISUAL}} $$0
endsnippet

snippet beq "Equation environment" b
\begin{equation}
	${0:${VISUAL}}
\end{equation}
endsnippet

snippet bal "Align environment" b
\begin{align}
	${0:${VISUAL}}
\end{align}
endsnippet

snippet bga "Gather environment" b
\begin{gather}
	${0:${VISUAL}}
\end{gather}
endsnippet

# ---------------------- Sized brackets and parenthesis ---------------------- #

context "math()"
snippet @) "long (" iA
\left( ${1:${VISUAL}} \right)
endsnippet

context "math()"
snippet @} "long {" iA
\left{ ${1:${VISUAL}} \right}
endsnippet

context "math()"
snippet @] "long [" iA
\left[ ${1:${VISUAL}} \right]
endsnippet

snippet \} "Chemmacros escaped {}" iA
\\{${1:${VISUAL}}\\}
endsnippet

# ------------------------------ Math functions ------------------------------ #

# Trig, log functions
context "math()"
snippet '(?<!\\)(sin|cos|tan|cosec|sec|cot|ln|log|exp)' "Trig, log functions" wrA
\\`!p snip.rv = match.group(1) + ' '`
endsnippet

# Fractions
context "math()"
snippet frac "Math fraction" iA
\frac{ ${1:Num} }{ ${2:Den} } $0
endsnippet

context "math()"
snippet drac "Display fraction" iA
\dfrac{ ${1:Num} }{ ${2:Den} } $0
endsnippet

# Sub and Superscripts
context "math()"
snippet < "Subscript" i
_{$1}$0
endsnippet

context "math()"
snippet > "Superscript" i
^{$1}$0
endsnippet

context "math()"
snippet '(\w)<(\S+) ' "Auto subscript" rA
`!p snip.rv = match.group(1)`_{`!p snip.rv = match.group(2)`}
endsnippet

context "math()"
snippet '(\w)>(\S+) ' "Auto superscript" rA
`!p snip.rv = match.group(1)`^{`!p snip.rv = match.group(2)`}
endsnippet

# Math environment text
context "math()"
snippet ;t "Text in math environment" iA
\text{${1:${VISUAL:Text}}}$0
endsnippet

context "math()"
snippet ;q "Text between quads" iA
\quad\text{${1:${VISUAL:Text}}}\quad$0
endsnippet

context "math()"
snippet ;bt "Before text" iA
\beforetext{${1:${VISUAL:Text}}}$0
endsnippet

context "math()"
snippet ;it "Intertext" iA
\intertext{${1:${VISUAL:Text}}}$0
endsnippet

# Aligned =
context "env('align')"
snippet ;= "&=" wA
&= $0
endsnippet

# Reaction arrows
context "env('gather')"
# arrow
snippet ;a "Arrow ->" wA
-> $0
endsnippet

context "env('align')"
snippet ;a "Arrow aligned &->" wA
&-> $0
endsnippet

context "env('gather')"
# equilibrium arrow
snippet ;e "Equilibrium <=>" wA
<=> $0
endsnippet

context "env('align')"
snippet ;e "Equilibrium aligned &<=>" wA
&<=> $0
endsnippet

